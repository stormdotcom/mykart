  <section class="form">
        <div class="container my-4">
            <div class="row signup-row mt-5">
                <div class="col-lg-5 nopadding">
                    <img src="/images/body/login-cover.jpg" class="img-fluid signup-img" alt="SignUpCover">
                </div>
                <div class="col-lg-7 px-5 pt-5">
                       <h1 class="py-3"><img src="/images/body/MYKART-logo.jpg" alt=""></h1>
                    <h4>Registration</h4>
                    <form  action="/signup" method="post">
                    {{#if alert}} 
                        {{#each alert}}
                                 <div class="alert alert-warning alert-dismissible fade show w-50 p-3" role="alert">
                                      {{this.msg}}  
                                       <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
                                       </button>
                                     </div>
                                     {{/each}}
                        {{/if}}
                            <!-- User Name -->
                        <div class="form-row">
                            <div class="col-lg-7">
                                <input type="name" name="fullname" id="name" class="form-control my-4 p-3" placeholder="Name">  
                                <p id="i"></p>
                            </div>
                               <!-- Email -->
                                <div class="col-lg-7">
                                <input type="email" name="email" id="email" class="form-control my-4 p-3" placeholder="Email">  
                                <p id="i1"></p>
                            </div>
                              <!-- Password -->
                            <div class="form-row">
                                <div class="col-lg-7">
                                    <input type="password" name="password" id="password" class="form-control my-4 p-3" placeholder="Password">
                                     <p id="i2"></p>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-lg-7">
                                   <button type="submit" id="login" class="btn-login mt-3 mb-3">Sign up </button>
                                </div>
                            </div>
                            
                            <p>Already have Account? <a href="/login">Login here</a></p> 
                    </form>

                </div>
            </div>
        </div>

    </section>
