<section id="contact" class="contact">
        <div class="container" >
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="py-3 mt-5 mb-4 align-center bold-head">Contact us</h1>
            <div id="message4" class="alert alert-warning alert-dismissible fade show alert-wishlist" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                    <form action="#" class="row g-3 needs-validation" validate>
                        <div class="col-md-4">
                          <div class="form-outline">
                            <input
                              type="text"
                              class="form-control"
                              id="validationCustom01"
                              placeholder="First Name"
                              value=""
                              maxlength="25"
                              minlength="1"
                              required
                            />
                            <label for="validationCustom01" class="form-label"></label>
                            <div class="valid-feedback">Looks good!</div>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-outline">
                            <input
                              type="text"
                              class="form-control"
                              id="validationCustom02"
                              value=""
                              placeholder="Last Name"
                            maxlength="25"
                              minlength="5"
                              required
                            />
                            <label for="validationCustom02" class="form-label"></label>
                            <div class="valid-feedback">Looks good!</div>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="input-group form-outline">
                            <input
                              type="email"
                              class="form-control"
                              id="validationCustomUsername"
                              aria-describedby="inputGroupPrepend"
                              placeholder="Email"
                              required
                            />
                            <label for="validationCustom02" class="form-label"></label>
                            <div class="invalid-feedback">Looks Good</div>
                          </div>
                        </div>
                        <div class="col-md-12 ">
                          <div class="form-outline">
                            <textarea type="textarea" placeholder="Your message here ! This is for 
                            test purpose form not connected to any api"
                             class="form-control" id="validationCustom03" 
                             rows="5" cols="5" required  maxlength="40"> </textarea>
                            <label for="validationCustom03" class="form-label"></label>
                            <div class="invalid-feedback">Fine !.</div>
                          </div>
                        </div>


                        <div class="col-12 mb-4 d-flex justify-content-center">
                          <button onclick="contactForm('{{user.fullname}}')" class="btn-advert" type="submit">Send</button>
                        </div>
                      </form>
                </div>
            </div>
        </div>
    </section>